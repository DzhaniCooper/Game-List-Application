<body class="img-responsive" style="background-image: url('../../cata.jpg'); background-repeat: no-repeat; background-size: cover; height: 100%; background-attachment:fixed">
    <div class="container body-content">
        @RenderBody()
        @*<hr />
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Game App D.Cooper</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
