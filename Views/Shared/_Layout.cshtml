<html style="height:100%; background-size:cover">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Game App</title>
    @Styles.Render("~/Content/css")
